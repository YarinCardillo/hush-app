# Hush — Environment Configuration
# Copy this to .env and customize

# REQUIRED: Change this to a random string (minimum 32 chars)
JWT_SECRET=your-very-long-random-secret-change-me

# Your server's public IP address (required for remote connections)
ANNOUNCED_IP=

# ─── Resource Pools ──────────────────────────────
# Total max concurrent rooms
TOTAL_MAX_ROOMS=50

# Pool allocation (must sum to <= 100)
# Set FREE_POOL_PERCENT=100 to disable tiers (all rooms = free, no limits)
FREE_POOL_PERCENT=60
SUPPORTER_POOL_PERCENT=30

# ─── Tier Limits ─────────────────────────────────
FREE_MAX_PARTICIPANTS=4
FREE_MAX_SCREEN_SHARES=1
FREE_MAX_BITRATE=4500000
SUPPORTER_MAX_PARTICIPANTS=10
SUPPORTER_MAX_SCREEN_SHARES=3
SUPPORTER_MAX_BITRATE=15000000
