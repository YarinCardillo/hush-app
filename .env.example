# Hush — Environment Configuration
# Copy this to .env and customize

# REQUIRED: Change this to a random string (minimum 32 chars)
JWT_SECRET=your-very-long-random-secret-change-me

# Your server's public IP address (required for remote connections)
ANNOUNCED_IP=

# ─── Matrix Homeserver ───────────────────────────
# Matrix server name (domain used in Matrix IDs like @user:domain)
MATRIX_SERVER_NAME=localhost

# Public URL where Matrix homeserver is accessible
MATRIX_PUBLIC_BASEURL=http://localhost:8008

# Internal URL for server-to-homeserver communication
MATRIX_HOMESERVER_URL=http://synapse:8008

# ─── LiveKit Media Server ────────────────────────
# API credentials for generating LiveKit access tokens
# REQUIRED: Change these to random strings (minimum 32 chars each)
LIVEKIT_API_KEY=your-livekit-api-key-change-me
LIVEKIT_API_SECRET=your-livekit-api-secret-change-me

# ─── PostgreSQL Database ─────────────────────────
# Database credentials for Synapse
POSTGRES_USER=synapse
POSTGRES_PASSWORD=synapse_password
POSTGRES_DB=synapse

# ─── Resource Pools ──────────────────────────────
# Total max concurrent rooms
TOTAL_MAX_ROOMS=50

# Pool allocation (must sum to <= 100)
# Set FREE_POOL_PERCENT=100 to disable tiers (all rooms = free, no limits)
FREE_POOL_PERCENT=60
SUPPORTER_POOL_PERCENT=30

# ─── Tier Limits ─────────────────────────────────
FREE_MAX_PARTICIPANTS=4
FREE_MAX_SCREEN_SHARES=1
FREE_MAX_BITRATE=4500000
SUPPORTER_MAX_PARTICIPANTS=10
SUPPORTER_MAX_SCREEN_SHARES=3
SUPPORTER_MAX_BITRATE=15000000
